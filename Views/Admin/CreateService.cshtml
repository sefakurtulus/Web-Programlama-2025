@model GymManagementSystem.Models.Entities.Service

@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Yeni Hizmet Ekle</h3>
            </div>
            <div class="card-body">
                <form asp-action="CreateService" method="post">
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Hizmet Adı *</label>
                        <input asp-for="Name" class="form-control" placeholder="Örn: Yoga, Pilates, Fitness" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Hizmet hakkında açıklama..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DurationMinutes" class="form-label">Süre (Dakika) *</label>
                            <input asp-for="DurationMinutes" type="number" class="form-control" placeholder="60" />
                            <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                            <small class="text-muted">15 ile 240 dakika arasında olmalı</small>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Price" class="form-label">Ücret (₺) *</label>
                            <input asp-for="Price" type="number" step="0.01"  class="form-control" placeholder="250.00" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="IsActive" type="checkbox" class="form-check-input" id="isActiveCheck" checked />
                        <label class="form-check-label" for="isActiveCheck">
                            Hizmet aktif olsun
                        </label>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="ManageServices" class="btn btn-secondary">
                            İptal
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Hizmet Ekle
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
